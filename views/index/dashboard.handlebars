<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="/stories/show/{{id}}">{{title}}</a>
      </td>
      <td>{{formatDate data 'Do MMMM YYYY'}}</td>
      <td>
        <span class="dash-status">{{status}}</span>
      </td>

      <td id="td-width">
        <a class="btn left-align" href="/stories/edit/{{id}}">
          <i class="fa fa-pencil"></i>
          <span class="hide-on-small-only">Edit</span>
        </a>

        <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
          {{!-- add this hidden field for delete req --}}
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn red">
            <i class="fa fa-remove"></i>
            <span class="hide-on-small-only">Delete</span>
          </button>
        </form>
      </td>

    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}